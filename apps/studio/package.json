		"sanity": "^4.22.0",
		"sanity-plugin-documents-pane": "^3.0.2",
		"styled-components": "^6.3.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@types/react": "^19.2.9",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
