{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"compatibilityDate": "2026-02-21",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": [
		"NODE_ENV",
		"VITE_SANITY_PROJECT_ID",
		"VITE_SANITY_DATASET",
		"VITE_SANITY_API_VERSION",
		"VITE_SANITY_STUDIO_URL",
		"VITE_WEB3FORMS_ACCESS_KEY",
		"SANITY_PROJECT_ID",
		"SANITY_DATASET",
		"SANITY_API_VERSION",
		"SANITY_READ_TOKEN",
		"SANITY_SESSION_SECRET",
		"SANITY_STUDIO_URL"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**", ".next/**", ".vinxi/**", ".output/**", ".vercel/output/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"type-check": {
			"dependsOn": ["^type-check"]
		},
		"format": {
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
